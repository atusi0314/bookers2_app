<main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0"> 
      <div class="row"> 
            <div class="col-md-3">
               <%= render "newbook", user: @user, book: @books %>
            </div>
            <div class = "col-md-8 offset-md-1">
               <h1>Book detail</h1>
                  <table class = "table">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= image_tag @book.user.get_profile_image(100,100) %>
                              <p>
                                <%= link_to user_path(@user.id) do %>
                                  <%= @book.user.name %>
                                <% end %>
                              </p>
                            </td>
                            <td><%= @book.title %></td>
                            <td><%= @book.body %></td>
                            <td>
                              <% if @book.user == current_user %>
                                <%= link_to "Edit", edit_book_path(@book) %>
                              <% end %>
                            </td>
                            <td>
                              <% if @book.user == current_user %>
                                <%= link_to "Destroy", book_path(@book), method: :delete %>
                              <% end %>
                            </td>
                        </tr>
                    </tbody>
                  </table>
              </div>
      </div>
    </div>
  </main>