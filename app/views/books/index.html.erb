<main>
    <%= render "newbook",user: @user, book: @book %>
            <div class ="col-md-8 offset-md-1">
                <h1>Books</h1>
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                                <th colspan = "3"></th>
                            </tr>
                        </thead>
                     <% @books.each do |book| %>
                        <tbody>
                            <tr>
                                <td class = "px-2"><%= image_tag  book.user.get_profile_image(100,100) %></td>
                                <td class = "px-2">
                                    <%= link_to book_path(book.id) do %>
                                     <%= book.title %>
                                    <% end %>
                                </td>
                                <td class = "px-2"><%= book.body %></td>
                            </tr>
                        </tbody>
                     <% end %>
                    </table>
            </div>
    </div>
</main>